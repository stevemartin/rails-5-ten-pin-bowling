<div class='table-responsive'>
  <table class='table table-striped'>
    <thead>
      <tr>
        <th>
          &nbsp;
        </th>
        <th>
          Frame 1
        </th>
        <th>
          Frame 2
        </th>
        <th>
          Frame 3
        </th>
        <th>
          Frame 4
        </th>
        <th>
          Frame 5
        </th>
        <th>
          Frame 6
        </th>
        <th>
          Frame 7
        </th>
        <th>
          Frame 8
        </th>
        <th>
          Frame 9
        </th>
        <th>
          Frame 10
        </th>
        <th>
          Total
        </th>
      </tr>
    </thead>
    <tbody>
      <% @scoreboard.scoreboard.each_with_index do |row, i| %>
        <tr>
          <th>
            Player: <%= i+1 %>
          </th>
        <% row[1..10].each do |cell| %>
          <td>
            <b><%= @scoreboard.total_for_frame(cell) %></b>
            <div><%= @scoreboard.first_shot(cell) %></div>
            <div><%= @scoreboard.second_shot(cell) %></div>
            <div><%= @scoreboard.third_shot(cell) %></div>
          </td>
        <% end %>
        <td>
          <%= @scoreboard.grand_total(row) %>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
